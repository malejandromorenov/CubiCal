FROM kernsuite/base:4

RUN docker-apt-install \
	casacore-dev \
	casacore-data \
	build-essential \
	python-pip \
	libboost-all-dev \
	wcslib-dev \
	libcfitsio-dev \
	python-numpy \
	python-casacore \
	python-pytest \
	cython

ADD . /code
WORKDIR /code
RUN python setup.py gocythonize
RUN python setup.py build_ext --inplace
RUN pip install -e .
RUN PYTHONPATH=. python test/kernels_test.py
